<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/play_pause_not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/ic_pause"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/song_title_not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/play_pause_not"
        android:text="Hit Vibes"/>

    <TextView
        android:id="@+id/artist_not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_title_not"
        android:layout_toRightOf="@id/play_pause_not"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Saint Pepsi"/>

    <ImageView
        android:id="@+id/album_cover_not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"
        android:layout_margin="8dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>